  "data-source": {
    "database-type": "mssql",
    "connection-string": "Server=midgardur.database.windows.net;Database=bikestore01;TrustServerCertificate=True;User ID=sqlnamskeid;Password=VeljaToflur2022!",
    "options": {
      "set-session-context": false
    }
  },
  "runtime": {
